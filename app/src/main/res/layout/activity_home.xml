<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:paddingBottom="60dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:text="Quiz"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/pesquisarInput"
                    android:layout_width="100dp"
                    android:background="@drawable/shape_edit_text_search_home"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Amor..."
                    android:padding="10dp"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:id="@+id/buttonPesquisar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:padding="12dp"
                    android:text="Pesquisar"
                    app:layout_constraintBottom_toBottomOf="@id/pesquisarInput"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/categoriaTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Categorias"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:paddingRight="20dp">

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="180dp"
                            android:layout_marginRight="20dp"
                            android:background="#837D7D"
                            android:text="Quiz para Casal" />

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="180dp"
                            android:layout_marginRight="20dp"
                            android:background="#837D7D"
                            android:text="Quiz de Animes" />

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="180dp"
                            android:layout_marginRight="20dp"
                            android:background="#837D7D"
                            android:text="Quiz Financeiro" />

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="180dp"
                            android:layout_marginRight="20dp"
                            android:background="#837D7D"
                            android:text="Quiz Heróis" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="60dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Recentes"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:paddingRight="20dp">
                        <Button
                            android:layout_width="200dp"
                            android:layout_height="180dp"
                            android:background="#837D7D"
                            android:text="Quem você seria em Naruto"
                            android:layout_marginRight="20dp"/>

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="180dp"
                            android:background="#837D7D"
                            android:text="O que você faria ganhando R$2M"
                            android:layout_marginRight="20dp"/>

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="180dp"
                            android:background="#837D7D"
                            android:text="Como você se arrumaria para um date"
                            android:layout_marginRight="20dp"/>

                        <Button
                            android:layout_width="200dp"
                            android:layout_height="180dp"
                            android:background="#837D7D"
                            android:text="Qual seria a sua magia em Black Cover"
                            android:layout_marginRight="20dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="60dp"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>